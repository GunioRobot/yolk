with "aws";
with "florist";
with "gnatcoll";
with "gnatcoll_postgres";

library project Yolk_Build is

   type Build_Type is ("Debug", "Production");
   Build : Build_Type := External ("BUILDTYPE", "Production");

   Source_Options := ("src");
   for Source_Dirs use Source_Options;

   case Build is
   
      when "Production" =>
         for Object_Dir use "build_production";
      when "Debug" =>
         for Object_Dir use "build_debug";
   
   end case;

   for Library_Dir use "library";

   for Library_Name use "yolk";

   package Ide is

      --  Adjust this to point to the compiler you want to use.
      for Compiler_Command ("ada") use "gnatmake";

   end Ide;

   package Compiler is
      
      case Build is
      
         when "Production" =>
            for Default_Switches ("Ada") 
              use ("-gnatwa",
                   "-gnaty3abcdefhiklmnoprstux",
                   "-Wall",
                   "-O2",
                   "-gnat05");
         when "Debug" =>
            for Default_Switches ("Ada") 
              use ("-gnatwa",
                   "-gnata",
                   "-gnatVa",
                   "-gnaty3abcdefhiklmnoprstux",
                   "-Wall",
                   "-O1",
                   "-gnat05",
                   "-g");
                        
      end case;

   end Compiler;

end Yolk_Build;
